---
const interestClass =
  "p-2 text-lg border-2 border-dark-15 text-dark-65 text-center transition ease-in-out duration-300";

const interestSelected = "bg-dark-15 font-semibold";
---

<div>
  <span class="text-2xl font-semibold text-dark-85">Interests</span>
  <div class="border-t-4 border-dark-15 my-1 w-[15%]"></div>
  <div class="p-1 text-dark-75">
    <span>I am also quite an interesting fellow, try clicking on one...</span>
  </div>
  <div class="mt-2 grid grid-cols-5">
    <div class="grid grid-rows-5 col-span-2">
      <span
        class=`${interestClass} ${interestSelected} selected-tag`
        id="coding-tag"
        data-image="coding-img">Coding</span
      >
      <span class={interestClass} id="robotics-tag" data-image="robotics-img"
        >Robotics</span
      >
      <span class={interestClass} id="chess-tag" data-image="chess-img"
        >Chess</span
      >
      <span class={interestClass} id="elocution-tag" data-image="elocution-img"
        >Elocution</span
      >
      <span class={interestClass} id="music-tag" data-image="music-img"
        >Music</span
      >
    </div>
    <div class="col-span-3 border-2 border-dark-15 p-2">
      <img
        id="coding-img"
        src="/coding.jpg"
        alt="Coding"
        class="h-full w-full selected-img"
      />
      <img
        id="robotics-img"
        src="/robotics.jpg"
        alt="Robotics"
        class="h-full w-full hidden"
      />
      <img
        id="chess-img"
        src="/chess.jpg"
        alt="Chess"
        class="h-full w-full hidden"
      />
      <img
        id="elocution-img"
        src="/elocution.jpg"
        alt="Elocution"
        class="h-full w-full hidden"
      />
      <img
        id="music-img"
        src="/music.jpg"
        alt="Music"
        class="h-full w-full hidden"
      />
    </div>
  </div>
</div>

<script define:vars={{ interestSelected }}>
  document.querySelectorAll(".grid-rows-5 span").forEach((tag) => {
    tag.addEventListener("click", () => {
      const imageId = tag.getAttribute("data-image");

      const selectedTag = document.querySelector(".selected-tag");
      const selectedImg = document.querySelector(".selected-img");

      selectedTag.classList.remove(
        "selected-tag",
        ...interestSelected.split(" ")
      );
      tag.classList.add("selected-tag", ...interestSelected.split(" "));

      selectedImg.classList.add("hidden");
      selectedImg.classList.remove("selected-img");
      document.getElementById(imageId).classList.remove("hidden");
      document.getElementById(imageId).classList.add("selected-img");
    });
  });
</script>
